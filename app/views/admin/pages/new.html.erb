<% @page_title = "Skapa en ny sida" %>
<% @page_class = "AB content" -%>
<div id="workspace">
  <div class="header">
    <h1>LÃ¤gg till <%= @page.field_set ? @page.field_set.title.downcase : 'sida' %></h1>
  </div>
  <div id="content">
    <%= error_messages_for :node %>
    <%= error_messages_for :page %>
    <% form_for @page, :url => admin_pages_path, :html => { :id => 'page', :class => 'new' } do |f| %>
      <%= render :partial => 'form', :locals => {:f => f} %>
      <div class="submit">
        <%= f.submit "Skapa sidan" %> eller <%= link_to "avbryt", previous_view_path(admin_pages_path) %>
      </div>
    <% end %>
  </div>
</div>
<% content_for :javascripts do %>
  <%= javascript_include_tag 'porthos/pages' %>
<% end %>