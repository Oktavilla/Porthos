<%= f.hidden_field :parent_id %>
<%= f.hidden_field :parent_type %>

<label for="page_title">Skriv en beskrivande titel</label>
<p class="form_help">En bra titel kan läsas ur sitt sammanhang och ändå förstås. Det är titeln som visas på Googles sökresultatsida.</p>
<div class="fullwidth">
  <%= f.text_field :title, :class => "title" %>
</div>
<label for="page_description">Skriv en sammanfattning av innehållet på sidan</label>
<div class="fullwidth">
  <%= f.text_area :description, :rows => 3, :class => 'wymeditor' %>
</div>
<label for="page_tag_names">
  Nyckelord
  <span class="form_help">separera nyckelord med mellanslag</span>
</label>
<div class="fullwidth">
<%= f.text_field :tag_names, :id => 'page_tag_names' %>
</div>

<label for="page_layout">Välj layout: <%= f.select :page_layout_id, PageLayout.find(:all).collect { |layout| [layout.name, layout.id] } %></label>

<% if f.object.page_layout.field_set && f.object.page_layout.field_set.fields.any? %>
  <% f.fields_for :custom_fields do |custom_fields| %>
    <% f.object.page_layout.field_set.fields.each do |field| -%>
      <%= form_field_for_custom_field(f.object, custom_fields, field) %>
    <% end -%>
  <% end -%>
<% end -%>

<% if not defined?(in_nodes_edit) %>
<label for="page_restricted" class="contains-input">
  <%= f.check_box :restricted %> Kräv inloggning
</label>
<% end %>