<%= f.hidden_field :parent_id %>
<%= f.hidden_field :parent_type %>

<label for="page_title">Sidans titel</label>
<%= f.text_field :title, :class => "title" %>

<% if @page and not @page.child? %>

  <% if @page.is_a?(PageCollection) %>
  <label for="page_layout">Välj förvald layout för undersidor</label>
  <%= f.select :default_child_layout_id, PageLayout.find(:all).collect { |layout| [layout.name, layout.id] } %>
  <% end %>

<label for="page_presets">Välj vilken sorts sida</label>
<div class="graphic">
<% PagePreset.find(:all).each do |preset| -%>
  <label for="<%= "page_preset_#{preset.id}" %>"<%= ' class="checked"' if @page and @page.preset_id.to_i == preset.id %>>
    <%= radio_button_tag 'page[preset_id]', preset.id, false, :id => "page_preset_#{preset.id}" %> 
    <%= image_tag preset.graphic.public_name, :width => 80, :height => 80, :class => "preset_graphic" if preset.graphic %>
    <%= preset.name %>
  </label>
<% end -%>
</div>
<% else -%>

<label for="page_description">
  Inledning / ingress
  <span class="info">(visas på översiktssidor för att locka till vidare läsning)</span>
</label>
<%= f.text_area :description, :rows => 5, :class => 'wymeditor' %>

<label for="page_title">Publiseringsdatum</label>
<%= f.date_select :published_on, :order => [:day, :month, :year ] %>

<div class="tags">
  <label for="page_tag_names">Nyckelord <span class="info">(olika nyckelord separeras med ett kommatecknen)</label>
  <%= f.text_area :tag_names, :rows => 2 %>
</div>

<% end -%>