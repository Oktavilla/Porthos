<% @page_title = "Användare > Ändra uppgifter för #{@user.name}" -%>
<% @page_class = "A" -%>
<div id="content_header">
  <h1>Användare</h1>
</div>
<div id="container">
  <div id="content">
    <div id="ca">
      <h2 class="label">Ändra uppgifter för ”<%= @user.name %>”</h2>
      <div class="inner">
        <% form_for :user, @user, :url => admin_user_path(@user), :html => { :method => :put, :multipart => true } do |f| %>
          <%= render :partial => "#{@user.roles.first.name.downcase}_form", :locals => { :f => f } %>
          <div class="confirm">
            <%= f.submit "Spara ändringar" %> eller <%= link_to "Avbryt", previous_view_path(admin_users_path) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>