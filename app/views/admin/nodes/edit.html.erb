<% @page_class = "A content" -%>
<div id="content_header">
  <h1>Inställningar för ”<%= @node.name %>”</h1>
</div>
<div id="container">
  <div id="content">
    <div id="ca">
      <div class="inner">
      <%= error_messages_for :node %>
      <% form_for :node, :url => admin_node_path(@node), :html => { :method => :put, :class => "tiny" } do |f| %>
        <label for="node_name">Namn i navigationen</label>
        <%= f.text_field :name, :class => "title" %>
        <label for="node_restricted" class="contains-input">
          <%= f.check_box :restricted %> Kräv inloggning
        </label>
        <ul id="access_status">
          <li>
            <label for="node_access_status_1">
              <%= f.radio_button :status, 1 %>
              syns i navigationen <span class="info">(är tillgänglig på internet)</span>
            </label>
          </li>
          <li>
            <label for="node_access_status_0">
              <%= f.radio_button :status, 0 %>
              syns <strong>inte</strong> i navigationen <span class="info">(men är tillgänglig på internet)</span>
            </label>
          </li>
          <li>
            <label for="node_access_status_-1">
              <%= f.radio_button :status, -1 %>
              avstängd <span class="info">(är ej tillgänglig på internet)</span>
            </label>
          </li>
        </ul>
        <div class="confirm">
          <%= submit_tag 'Spara ändringar' %> eller <%= link_to "avbryt", previous_view_path(admin_nodes_path(:nodes => @node)) %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>