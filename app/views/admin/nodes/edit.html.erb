<% @page_class = "A content" -%>
<div id="workspace">
  <div class="header">
    <h1>Inställningar för ”<%= @node.name %>”</h1>
  </div>
  <div id="content">
    <%= error_messages_for :node %>
    <% form_for :node, :url => admin_node_path(@node), :html => { :method => :put, :class => "tiny" } do |f| %>
      <label for="node_name">Namn i navigationen</label>
      <%= f.text_field :name, :class => "title" %>
      <label for="node_restricted" class="contains-input">
        <%= f.check_box :restricted %> Kräv inloggning
      </label>
      <ul id="access_status">
        <li>
          <label for="node_access_status_1">
            <%= f.radio_button :status, 1 %>
            Syns i navigationen. <span class="form_help">Och är tillgänglig på internet.</span>
          </label>
        </li>
        <li>
          <label for="node_access_status_0">
            <%= f.radio_button :status, 0 %>
            Syns <strong>inte</strong> i navigationen. <span class="form_help">Men är tillgänglig på internet.</span>
          </label>
        </li>
        <li>
          <label for="node_access_status_-1">
            <%= f.radio_button :status, -1 %>
            Avstängd. <span class="form_help">Är ej tillgänglig på internet.</span>
          </label>
        </li>
      </ul>
      <% if @node.resource and @node.resource.is_a?(Page) %>
      <fieldset>
        <% f.fields_for :resource_attributes, @node.resource do |resource| %>
          <%= resource.hidden_field :id %>
          <%= render :partial => 'admin/pages/form', :locals => {:f => resource} %>
        <% end %>
      <% end %>
      </fieldset>
      <div class="submit">
        <%= submit_tag 'Spara ändringar' %> eller <%= link_to "avbryt", previous_view_path(admin_nodes_path(:nodes => @node)) %>
      </div>
    <% end %>
  </div>
</div>