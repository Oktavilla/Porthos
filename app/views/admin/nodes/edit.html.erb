<% @page_title = "Sidor > #{@node.name}" %>
<% @page_class = "A content" -%>
<div id="workspace">
  <div class="header">
    <h1><span class="pre">Ändra detaljer</span> <%= @node.name %></h1>
  </div>
  <div id="content">
    <%= error_messages_for :node %>
    <% form_for :node, :url => admin_node_path(@node), :html => { :method => :put } do |f| %>
      <fieldset>
        <%= render :partial => 'form', :locals => { :f => f } %>
      </fieldset>
      <div class="submit">
        <%= submit_tag 'Spara ändringar' %> eller <%= link_to "avbryt", previous_view_path(admin_nodes_path(:nodes => @node)) %>
      </div>
    <% end %>
  </div>
</div>
<%= javascript_include_tag 'named_routes' %>
<%= javascript_include_tag 'porthos/prototype', 'porthos/effects', 'porthos/controls', 'porthos/dragdrop', 'porthos/lowpro', 'porthos/lib', 'porthos/application', :cache => 'admin' %>
<%= javascript_include_tag 'porthos/swfupload/swfupload', 'porthos/swfupload/swfupload.queue.js', 'porthos/assets', 'porthos/swfobject', 'porthos/mediaplayer', :cache => 'assets_uploader' %>
<%= javascript_include_tag 'porthos/pages' %>