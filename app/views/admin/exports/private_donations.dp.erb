<% @export.registrations.each do |d| -%>
<% list_code = ((d.conversion and d.conversion.measure_point and !d.conversion.measure_point.campaign.dp_donor_code.blank?) ? d.conversion.measure_point.campaign.dp_donor_code : 'WE') -%>
<%= [
  d.created_at.to_s(:db),
  d.first_name.titlecase,
  d.last_name.titlecase,
  '',
  d.address.titlecase,
  d.post_code, # reformat (3 2)
  d.locality.upcase,
  d.email,
  (d.contact_approval? ? 'HE' : ''),
  'P',
  'PRV',
  d.total_sum.cents/100,
  list_code,
  ((d.conversion and d.conversion.measure_point) ? 'BJ' : 'BN'),
  'HOED',
  d.target_code,
  d.payment_type, # Konvertera till DP koder
  d.payment_transaction_id ].collect { |value| "\"#{ value.to_s.gsub(/\n|\r/, '').to_latin1.chomp }\"" }.join(',') %>
<% end -%>