<%= f.error_messages %>

<label for="field_label">Namn</label>
<%= f.text_field :label %>

<label for="field_handle">Fältnamn</label>
<%= f.text_field :handle %>

<label for="field_required" class="contains-input">
  <%= f.check_box :required %> Obligatorisk?
</label>

<label for="field_notice">Instruktioner</label>
<%= f.text_area :instructions, :rows => 3 %>

<label for="field_type" class="contains-input">
  Typ <%= select_tag 'field_type', options_for_select(Field.types.collect { |type| [type.human_name, type.to_s] }) %>
</label>

<div id="field_types">
  <div class="type text_field">
    <label for="field_allow_rich_text" class="contains-input">
      <%= f.check_box :allow_rich_text %>
      Tillåt textformatering?
    </label>
  </div>
  <div class="type association_field">
    <label for="field_relationship" class="contains-input">
      Typ av relation: <%= f.select :relationship, [['En till en', 'one_to_one'], ['En till många', 'one_to_many']] %>
    </label>
    <label for="field_association_source_id" class="contains-input">
      Kan relatera till sidtyp <%= f.select :association_source_id, PageLayout.all.collect { |p| [p.name, p.id ] } %>
    </label>
  </div>
</div>