        <fieldset id="files">
          <%= f.file_field :file, :size => 15 %>
        </fieldset>
        <fieldset class="submit" id="submit_container">
          <input type="submit" value="BÃ¶rja uppladdning"> eller <%= link_to "Avbryt", :action => "index" %>
        </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag 'named_routes' %>
