<% @page_title = "Filarkiv" %>
<% @page_class = "AB" %>
<h1>Filer och dokument</h1>
<div id="content">
<div id="c-b">
</div>
<div id="c-a">
  <h2 class="label">Ladda upp nya filer</h2>
  <% form_for :asset, :url => admin_assets_path, :html => { :method => :post, :multipart => true, :id => 'add_file' } do |f| %>
    <% @assets.each do |asset| %>
      <% if asset.errors.any? %>
        <p>Det gick inte att ladda upp filen "<%= "#{asset.title}.#{asset.extname}" %>". Försök igen eller <%= link_to "gå vidare &rarr;", incomplete_admin_assets_url %></p>
      <% end %>
      <%= file_field_tag 'files[]', :size => "15", :class => "file" %> 
    <% end %>
    <div class="submit"><%= f.submit 'Ladda upp' %></div>
  <% end %>
</div>
</div>