<div class="teaser" id="teaser_<%= content.resource.id %>">
  <span class="title"><%= content.resource.title %></span>
  <%= content.resource.body %>
  <% if content.resource.images.any? %>
    <h2>Bilder</h2>
    <% if content.resource.asset_usages.size > 1 %>
      <span class="controls">
        <%= link_to "Ändra ordning", sort_admin_asset_usages_path, :id => "sort_assets" %>
        <%= display_indicator :id => 'teasers_indicator' %>
      </span>
    <% end %>
    <ul id="assets" class="assets sortable_tree">
    <% content.resource.asset_usages.each do |usage| %>
      <li id="asset_<%= usage.id %>">
        <%= image_tag('/graphics/admin/icons/move-vertical.gif', :class => "handle", :style => 'display:none') %>
        <%= image_tag(display_image_path(:size => 'c90x90', :id => usage.asset, :format => usage.asset.extname)) %>
        <%= button_to "Radera", admin_asset_usage_path(:id => usage.id, :return_to => request.request_uri), { :method => :delete, :class => "delete", :src => "/graphics/admin/icons/trash.gif", :confirm => "Är du säker, detta går inte att ångra." } %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>