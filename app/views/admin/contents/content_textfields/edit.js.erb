<%= error_messages_for :content_textfield %>
<% form_for :content, @content, :url => admin_content_path(@content), :html => { :method => :put } do |f| %>
  <%= render :partial => '/admin/contents/content_textfields/form.html.erb', :locals => { :content => @content, :f => f } %>
  <div class="submit">
    <%= submit_tag 'Spara', :class => 'commit button' %> eller
    <%= link_to "Avbryt", previous_view_path, :class => 'cancel' %>
  </div>
<% end %>
