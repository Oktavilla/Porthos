<% @page_title = "Lägg till film" %>
<div id="workspace">
  <div class="header">
    <h1>Lägg till film</h1>
  </div>
  <div id="content">
    <%= image_tag display_image_path(:size => 'w270', :id => @content.resource.asset.thumbnail, :format => @content.resource.asset.thumbnail.extname), :width => 270 %>
    <% form_for :content, @content, :url => admin_contents_path(:collection => params[:collection]) do |f| %>
      <%= f.hidden_field :context_id %>
      <%= f.hidden_field :context_type %>
      <%= f.hidden_field :parent_id %>
      <%= f.hidden_field :column_position %>
      <%= f.hidden_field :resource_type %>
      <% fields_for :resource do |resource| %>
        <%= resource.hidden_field :video_asset_id, :value => @content.resource.asset.id %>
        <label for="content_image_title">Titel</label>
        <%= resource.text_field :title, :value => @content.resource.asset.title, :class => 'title' %>
        <label for="content_image_caption">Beskrivning</label>
        <%= resource.text_area :caption, :value => @content.resource.asset.description, :cols => 30, :rows => 4 %>    
        <label for="content_image_title">Copyright</label>
        <%= resource.text_field :copyright, :value => @content.resource.asset.author %>
      <% end %>
      <div class="submit">
        <input type="submit" value="Lägg till film"> eller <a href="<%= previous_view_path %>" class="back">avbryt</a>
      </div>
    <% end %>
  </div>
</div>