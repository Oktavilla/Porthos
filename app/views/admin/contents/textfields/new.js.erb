<h1>Ny text på sidan ”<%= @page.title %>”</h1>
<% form_for :content, @content, :url => admin_page_contents_path(@page) do |form| %>
  <%= form.hidden_field :resource_type %>
  <%= form.hidden_field :column_position %>
  <% unless @content.resource.shared? -%>
    <% fields_for :textfield do |f| %>
      <%= render :partial => '/admin/contents/textfields/form.html.erb', :locals => { :page => @page, :content => @content, :f => f } %>
    <% end %>
  <% else -%>
    <%= form.select :resource_id, Textfield.shared.find(:all, :order => 'title ASC').collect { |t| [t.title, t.id] } %>
  <% end -%>
  <div class="submit">
    <%= submit_tag 'Spara', :class => 'commit button' %> eller
    <%= link_to "Avbryt", previous_view_path(admin_page_path(@page)), :class => 'cancel' %>
  </div>
<% end %>
