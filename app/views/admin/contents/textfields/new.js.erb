<% form_for :content, @content, :url => admin_contents_path do |f| %>
  <% unless @content.resource.shared? -%>
    <%= render :partial => '/admin/contents/textfields/form.html.erb', :locals => { :content => @content, :f => f } %>
  <% else -%>
    <%= f.select :resource_id, Textfield.shared.find(:all, :order => 'title ASC').collect { |t| [t.title, t.id] } %>
  <% end -%>
  <div class="submit">
    <%= submit_tag 'Spara', :class => 'commit button' %> eller
    <%= link_to "Avbryt", previous_view_path, :class => 'cancel' %>
  </div>
<% end %>
