<% form_tag search_admin_registrations_path, :method => 'get' do %>
<div class="search">
  <%= text_field_tag :query, (@query || 'Sök'), :class => "search_query", :id=> "search_query" %>
  <%= submit_tag "Sök", :style => "display:none" %>
</div>
<% end %>
<% form_tag admin_show_registration_path, :method => 'get' do %>
<div class="search">
  <%= text_field_tag :id, (@registration ? @registration.id : 'Hitta registrering med ref# ...'), :class => "search_query", :id=> "ref_search_query" %>
  <%= submit_tag "Visa", :style => "display:none" %>
</div>
<% end %>

<h2>Registreringstyper</h2>
<ul class="filter">
  <li><%= link_to "Visa alla", admin_registrations_path(), :class => (current_type == "Registration" ? 'current' : nil) %></li>
<% Registration::valid_registration_types.each do |registration_type| -%>
  <li><%= link_to registration_type.constantize.human_name, admin_registrations_path(:type => registration_type), :class => (current_type == registration_type ? 'current' : nil) %></li>
<% end -%>
</ul>
