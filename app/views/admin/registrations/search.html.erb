<% @page_title = "Din sökning på #{@query} gav #{@search.total_entries}" -%>
<% @page_class = "layout3" %>
<div id="workspace">
  <div class="header">
    <h2>Sökresultat för "<%= @query %>" (<%= @search.total_entries %> träffar)</h2>
  </div>
  <div id="content">
    <% if @search.total_entries != 0 -%>
      <%= render :partial => "table", :locals => { :registrations => @search.results } %>
    <% else -%>
      <p>Inga träffar hittades på sökningen ”<%= @query %>”</p>
    <% end -%>
    <%= will_paginate @search %>
  </div>
</div>