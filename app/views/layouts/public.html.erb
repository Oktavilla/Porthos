<body<%= public_body_attributes %>>
<% if @preview and logged_in? -%>
  <div id="preview">
      <% begin %>
        <%= render :partial => 'preview'  %>
      <% rescue %>
        <span>FÃ¶rhandsgranskning</span> <%= link_to 'Tillbaka till admin &rarr;', '/admin', :class => 'edit' %>
      <% end %>
  </div>
<% end -%>
<div id="wrap">
  <div id="header">
    <% nested_list_of @root_nodes, {}, :id => 'nav' do |node| %>
      <a href="/<%= node.slug %>"<%= ' class="current"' if @trail and @trail.include?(node) %>>
        <span><%= node.name %></span>
      </a>
    <% end if @root_nodes and @root_nodes.any? %>
  </div>
  <%= yield %>
  <div id="footer">
    <div id="footer_info">
      
    </div>
  </div>
</div>
